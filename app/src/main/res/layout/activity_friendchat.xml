<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendchatActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="聊天(5)"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ButtonTest"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/a"
                    android:drawablePadding="-15sp"
                    android:paddingTop="32sp"
                    android:text="今天的課好難歐"
                    android:textAlignment="center"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/buttonTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/b"
                    android:drawablePadding="-15sp"
                    android:paddingTop="32sp"
                    android:text="紅豆餅姐姐傳送了貼圖"
                    android:textAlignment="center"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/buttonTest2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/c"
                    android:drawablePadding="-15sp"
                    android:paddingTop="32sp"
                    android:text="嫩"
                    android:textAlignment="center"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/buttonTest3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/d"
                    android:drawablePadding="-15sp"
                    android:paddingTop="32sp"
                    android:text="上線打LOL阿"
                    android:textAlignment="center"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/buttonTest4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/e"
                    android:drawablePadding="-15sp"
                    android:paddingTop="32sp"
                    android:text="明天有RAP比賽ㄟ"
                    android:textAlignment="center"
                    android:textAllCaps="true">

                </Button>

                <Button
                    android:id="@+id/buttonTest5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableLeft="@drawable/f"
                    android:drawablePadding="-15sp"
                    android:paddingTop="32sp"
                    android:text="心好累"
                    android:textAlignment="center"
                    android:textAllCaps="true">

                </Button>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="403dp">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@drawable/g"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="429dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/b2"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@drawable/gg"
                tools:layout_editor_absoluteX="97dp"
                tools:layout_editor_absoluteY="429dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/b3"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@drawable/ggg"
                tools:layout_editor_absoluteX="186dp"
                tools:layout_editor_absoluteY="429dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/b4"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                app:srcCompat="@drawable/gggg"
                tools:layout_editor_absoluteX="279dp"
                tools:layout_editor_absoluteY="429dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>